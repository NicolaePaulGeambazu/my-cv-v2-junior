- var sectionTitle =data.skills.sectionTitle;
include ../section-title/section-title

.column(span="row")
  h3.about-me__lead-title=data.skills.legend.title
.column(span="row")
  ul.skills__list
    each item, key in data.skills.legend.itemList
      li.skills__item
        span.skills__icon(class=`icon__${item.icon}`)
        span.skills__label=item.label 
        spam.skills__count=key + 1
each skillType in data.skills.skillTypList
  .column(span="row")
    h3.about-me__lead-title=skillType.type
  .column(span="row")
    each skill in skillType.skillList
      span(
      class=`skills__new--${skills.type}`
      )=skill.label
.column(span="row")
  .desription-box__with-shadow
    p.desriere=data.skills.desription 